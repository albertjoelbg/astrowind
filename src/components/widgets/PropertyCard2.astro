---
import Image from "../common/Image.astro";

let {
  id,
  imagen,
  especificaciones,
  precioBaseSoles,
  precioBaseDolares,
  tipo,
  disponibilidad,
  ubicacion,
  areaTotal,
  areaConstruida
} = Astro.props;
---

<div class="max-w-sm mx-auto bg-white dark:bg-slate-950 shadow-lg rounded-lg overflow-hidden">
  <div class="relative">
    <Image class="w-48 h-48 object-center" src={imagen} alt="casa de paracas"/>
    <div class="absolute top-0 right-0 m-2 bg-blue-500 text-white text-xs font-bold px-2 py-1 rounded">
      {id}
    </div>
    <div
      class="absolute bottom-0 right-0 m-2 bg-green-500 text-white text-xs font-bold px-2 py-1 rounded">
      {`${tipo} en ${disponibilidad}`}
    </div>
  </div>
  <div class="py-3 px-6 mb-4 bg-white dark:bg-slate-950">
    <div class="flex item-center mt-3">
      <h2 class="text-blue-600 text-sm dark:text-blue-300">S/. {precioBaseSoles} -
        USD {precioBaseDolares}</h2>
    </div>
    <div class="flex items-center mt-2">
      <div class="line-height-0">
        <svg class="w-5 h-5 text-gray-600 fill-current dark:text-gray-300" viewBox="0 0 24 24"
             xmlns="http://www.w3.org/2000/svg">
          <path
            d="M12 2C8.1 2 5 5.1 5 9c0 5.6 7 13 7 13s7-7.4 7-13c0-3.9-3.1-7-7-7zm0 9.5c-1.4 0-2.5-1.1-2.5-2.5S10.6 6.5 12 6.5s2.5 1.1 2.5 2.5S13.4 11.5 12 11.5z"/>
        </svg>
      </div>
      <h1 class="text-gray-600 font-semibold text-sm ml-1 dark:text-gray-300">{ubicacion}</h1>
    </div>
    <p
      class="h-16 mt-2 py-2 text-gray-500 text-sm dark:text-gray-400">{especificaciones.toUpperCase()}.</p>

    <div class="flex justify-between gap-2">
      <div class="flex items-center gap-1 mt-2">
        <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
          <circle class="fill-gray-500 dark:fill-gray-300" cx="20" cy="20" r="19.89"/>
          <path class="fill-white dark:fill-black"
                d="M9.59,32.33a4.33,4.33,0,0,1-1-.78,2,2,0,0,1-.33-1.11c0-4.67,0-9.33,0-14a2.06,2.06,0,0,1,2.21-2.19H24.09A2,2,0,0,1,26,15.31a2.94,2.94,0,0,1,.26,1.24c0,4.44,0,8.88,0,13.33a2.33,2.33,0,0,1-1.43,2.45Zm.61-16V30.37H24.29V16.28Z"/>
          <path class="fill-white dark:fill-black"
                d="M30,32.33,27.7,29.21l-.5-.68H29V18.16H27.18L30,14.33l2.85,3.8H31.07V28.49h1.79c-.14.22-.22.36-.32.49l-2.32,3.11a1.12,1.12,0,0,0-.13.24Z"/>
          <path class="fill-white dark:fill-black"
                d="M8.25,10.53l3.81-2.85V9.5H23.37V7.67l3.82,2.85-3.8,2.85V11.55H12.09V13.4Z"/>
        </svg>
        <p class="text-gray-600 text-sm dark:text-gray-300">
          Área total: <strong class="font-semibold text-xs">{areaTotal}m<sup>2</sup></strong>
        </p>
      </div>

      <div class="flex items-center gap-1 mt-2">
        <svg class="w-8 h-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 40 40">
          <circle class="fill-gray-500 dark:fill-gray-300" cx="20" cy="20" r="19.89"/>
          <g transform="translate(10, 10)">
            <path class="fill-white dark:fill-black"
                  d="M1.08,1.28c-.27.28-.54.56-.82.83a.86.86,0,0,1-1,.17.83.83,0,0,1-.47-.88A1,1,0,0,1,.08.88c.49-.53,1-1,1.53-1.53a2.21,2.21,0,0,1,3,0l1.49,1.46a.88.88,0,1,1-1.25,1.25L3,.27l-.08-.06a1,1,0,0,0,0,.16v14a1.75,1.75,0,0,0,1.77,1.77H18.75l0-.05c-.15-.13-.29-.25-.43-.39s-.36-.34-.53-.52a.89.89,0,0,1,0-1.22.86.86,0,0,1,1.2-.06c.58.54,1.17,1.09,1.7,1.69a2.17,2.17,0,0,1-.14,3L19.09,21a.88.88,0,0,1-1,.19.88.88,0,0,1-.24-1.44l.8-.79,0-.06h-14a3.51,3.51,0,0,1-3.53-3.52v-14Z"/>
            <path class="fill-white dark:fill-black"
                  d="M21.23,7v5.69a.88.88,0,1,1-1.76.13,1.21,1.21,0,0,1,0-.19V1.52a.89.89,0,0,0-1-1H7.28a.88.88,0,0,1-.9-1.09.85.85,0,0,1,.73-.66l.26,0H18.48a2.64,2.64,0,0,1,2.7,2.13,3.35,3.35,0,0,1,.05.63Z"/>
