---
import Image from "../common/Image.astro";
let {titulo, descripcion, src, alt, href} = Astro.props;
---
<article class="bg-white dark:bg-slate-950 shadow-lg rounded-lg overflow-hidden">
  <div class="relative md:h-64 bg-gray-400 dark:bg-slate-700 rounded shadow-lg mb-6 overflow-hidden">
    <a href={href}>
      <Image src={src} alt={`Image del post ${titulo.slice(0, 10)}`} class="w-full h-full object-cover"/>
    </a>
  </div>
  <h3
    class="text-center text-lg sm:text-xl font-semibold leading-tight mb-2 font-heading dark:text-slate-300">
    <a class="inline-block hover:text-primary dark:hover:text-blue-700 transition ease-in duration-200"
       href={href}>
      {titulo}
    </a>
  </h3>
  <p class="text-muted dark:text-slate-400 text-base p-4">{`${descripcion.slice(0, 140)}...`}</p>
</article>
