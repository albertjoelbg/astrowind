---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>

  <HeroText tagline="Contacto" title="Vamos a Conectarnos"/>

  <ContactUs
    id="form"
    title="¡Envíanos un mensaje hoy!"
    subtitle="Para obtener respuestas nuestro equipo de soporte estará encantado de ayudarle."
    inputs={[
      {
        type: 'text',
        name: 'nombre',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario de contacto, usted reconoce y acepta la recopilación de su información personal.',
    }}
    description="Nuestro equipo de soporte normalmente responde dentro de las 24 horas hábiles."
  />

  <Features2
    title="¡Estamos aquí para ayudar!"
    items={[
      {
        title: 'Soporte general',
        description: `Chatea con nosotros para consultas relacionadas con la administración de cuentas, navegación del sitio web, problemas de pago, acceso a plantillas compradas o preguntas generales sobre la funcionalidad del sitio web.`,
      },
      {
        title: 'Contacto de ventas',
        description:
          'Chatea con nosotros si tienes preguntas sobre compras, opciones de personalización, licencias para uso comercial, consultas sobre plantillas específicas, etc.',
      },
      {
        title: 'Soporte Técnico',
        description:
          'Chatea con nosotros cuando tengas problemas como instalación de plantillas, problemas de edición, problemas de compatibilidad con el software o errores de descarga, u otros desafíos técnicos relacionados con el uso de las plantillas.',
      },
      {
        title: 'Teléfono',
        description: '+1 (234) 567-890',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'contacto@soporte.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Túpac Amaru, Motupe, Lambayeque',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
